<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/id_timepicker_details"
    >

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_future_timepicker"
        android:timePickerMode="spinner"/>

    <com.example.safedrive.utils.view.GothamButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_future_time"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_setfuturetime"
        android:layout_below="@id/id_future_timepicker"/>


</RelativeLayout>